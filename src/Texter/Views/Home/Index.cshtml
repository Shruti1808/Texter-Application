@{ 
    ViewData["title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Awesome Text Messaging App!</h2>
    <hr />

    <h2 class="display-contact">Display contact</h2>
    <div id="result"></div>
   
    <br />
    @Html.ActionLink("View all Messages", "GetMessages")
    <br />
    @Html.ActionLink("Send a new message", "SendMessage")

    <form action="AddContact" class="add-contact">
        <label for="Name">Name:</label>
        <input type="text" name="Name" />
        <label for="phone-number">Phone Number</label>
        <input type="number" name="PhoneNumber"/>
        <button type="submit">Submit</button>
    </form>
<div id="new-contact"></div>
